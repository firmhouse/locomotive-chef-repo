{
  "run_list": "role[mysql],role[cakephp]",
  "authorization": {
    "sudo": {
      "users": ["<your user>"],
      "groups": ["admin", "sudo"],
      "passwordless": true,
      "include_sudoers_d": true
    }
  },
  "mysql": {
    "server_debian_password": "<a random password>",
    "server_root_password": "<a random password>",
    "server_repl_password": "<a random password>",
    "bind_address": "127.0.0.1"
  },
  "nginx": {
    "client_max_body_size": "20m",
    "server_tokens": "off"
  },
  "deploy_users": [
    "<add as many users as you want to create to deploy>"
  ],
  "ssh_deploy_keys": [
    "<the contents of your ~/.ssh/id_rsa.pub file>"
  ],
  "ruby_build": {
    "upgrade": true
  },
  "active_cakephp_applications": {
    "myapp_production": {
      "domain_names": ["myapp.com", "www.myapp.com"],
      "packages": ["php5-cli", "php-pear", "php5-dev"],
      "database_info": {
        "host": "localhost",
        "username": "myapp",
        "password": "myapp_password",
        "database": "myapp_production"
      },
      "deploy_user": "<deploy user>"
    }
  }
}